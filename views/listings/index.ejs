<% layout("/layouts/boilerplate") %>
<body>
    <%= success %>

    <style>
         #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-left: 1rem;
        margin-right: 1rem;
        margin-top: 2rem;
        opacity: 0.7;
        cursor: pointer;
        text-decoration: none; 
        color: black;
    }
    .filter:hover{
        opacity: 1;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-toggle{
        border:1px solid black;
        border-radius: 1rem;
        height: 3rem;
        display: flex;
        align-items: center;
        padding: 1rem;
        margin-left: 4rem;
    }
    #filters-filter{
        display: flex;
        align-items: center;
        justify-content: space-around;
    }

    @media (max-width:995px){
        #filters{
            display: flex;
            flex-wrap: nowrap;
            overflow: scroll;
        }

        #filter-btn{
            display: none;
        }
        .filter-outer-btn{
            margin-left: 4rem;
        }
    }
</style>
<body>
    <div id="filters-filter">
        <div id="filters">
            <a class="filter" href="/listings/category/trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
            <a class="filter" href="/listings/category/rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
            <a class="filter" href="/listings/category/iconic_cities">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>
            <a class="filter"  href="/listings/category/mountains">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
            <a class="filter"  href="/listings/category/artic">
                <div><i class="fa-solid fa-person-skiing"></i></div>
                <p>Artic</p>
            </a>
            <a class="filter"  href="/listings/category/castles">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
            <a class="filter"  href="/listings/category/beaches">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beaches</p>
            </a>
            <a class="filter"  href="/listings/category/camping">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
            <a class="filter"  href="/listings/category/farms">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </a>
        </div>
        

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay">abcd</div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title%> <br></b>
                        &#8377;<%= listing.price.toLocaleString("en-IN")%>/night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>  
                      </p>
                    </div>
                </div>
            </a>
     <% } %>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
        let taxInfo = document.getElementsByClassName("tax-info")
        for(info of taxInfo){
           if(info.style.display != "inline"){
              info.style.display = "inline";
        }else{
            info.style.display = "none"
        }
    }       
    });


</script>

